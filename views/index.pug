extends layout1

block scripts
  script(src='/javascripts/index.js')

block content
  script(src = '/javascripts/signup.js')
  script(src="https://cdn.bootcss.com/limonte-sweetalert2/7.21.1/sweetalert2.js")
  link(rel='stylesheet', href='https://cdn.bootcss.com/limonte-sweetalert2/7.21.1/sweetalert2.css')
  link(rel='stylesheet', href='/stylesheets/background.css')
  .demo-samples
    .login-form
      .sborder
        .icon
          img(src="resource/mine_fill.svg")
        |             
        .form-group
          input#login-name.form-control.login-field(type="text", value="", placeholder="邮箱")
          |               
          label.login-field-icon.fui-user(for="login-name")
        |             
        .form-group
          input#login-pass.form-control.login-field(type="password", value="", placeholder="密码")
          |               
          label.login-field-icon.fui-lock(for="login-pass")
        |             
        a#login-btn.btn.btn-primary.btn-lg.btn-block(href="#") 登录
        |             
        a.login-link(href="/signup/signup") 新用户注册
